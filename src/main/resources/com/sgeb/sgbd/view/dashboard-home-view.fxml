<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox alignment="TOP_LEFT" spacing="25.0" styleClass="page-content" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" >
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Tableau de Bord : Aperçu Général" styleClass="content-title" />
    <Label text="Bienvenue dans l'interface d'administration du SGEB." styleClass="subtitle-text" />

    <GridPane hgap="25.0" vgap="25.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0" percentWidth="25.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0" percentWidth="25.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0" percentWidth="25.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0" percentWidth="25.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>

        <VBox styleClass="stat-card" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Total Adhérents" styleClass="card-label" />
            <Label fx:id="totalMembersLabel" text="150" styleClass="card-value" />
            <Label text="+5 Nouveaux ce mois" styleClass="card-footer" />
        </VBox>

        <VBox styleClass="stat-card" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Documents Totaux" styleClass="card-label" />
            <Label fx:id="totalDocumentsLabel" text="2500" styleClass="card-value" />
            <Label text="1800 Livres, 700 Articles" styleClass="card-footer" />
        </VBox>

        <VBox styleClass="stat-card" alignment="CENTER_LEFT" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <Label text="Emprunts Actuels" styleClass="card-label" />
            <Label fx:id="currentBorrowingsLabel" text="85" styleClass="card-value primary-color" />
            <Label text="12 en retard !" styleClass="card-footer warning-color" />
        </VBox>

        <VBox styleClass="stat-card" alignment="CENTER_LEFT" GridPane.columnIndex="3" GridPane.rowIndex="0">
            <Label text="Disponibles (Catalogue)" styleClass="card-label" />
            <Label fx:id="availableDocumentsLabel" text="2415" styleClass="card-value" />
            <Label text="96.6% de disponibilité" styleClass="card-footer" />
        </VBox>

    </GridPane>
    
    <VBox spacing="10.0">
        <Label text="Activité Récente" styleClass="section-title" />
        <Label text="[Un tableau simple des 5 derniers emprunts et retours peut être placé ici]" styleClass="placeholder-text" />
    </VBox>
    
</VBox>